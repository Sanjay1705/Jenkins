pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Compose Up') {
      steps {
        sh 'docker compose up --build -d'
        sh 'sleep 5'
      }
    }
    stage('Run Tests') {
      steps {

        sh 'docker compose exec -T web pytest -q'
      }
    }
    stage('Smoke Test') {
      steps {
        sh 'curl --fail http://localhost:5000/health'
        sh 'curl --fail http://localhost:5000/'
      }
    }
  }
  post {
    always {
      sh 'docker compose down --volumes --remove-orphans || true'
    }
  }
}
